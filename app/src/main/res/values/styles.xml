<resources>
    <!-- 自定義AlertDialog樣式 -->
    <style name="CathayAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 設定背景顏色為白色 -->
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@color/cathay_green</item>
        <item name="android:textColorSecondary">@color/cathay_dark_gray</item>
        <item name="android:buttonStyle">@style/CathayAlertDialogButton</item>
    </style>

    <!-- 設定AlertDialog按鈕的樣式 -->
    <style name="CathayAlertDialogButton">
        <item name="android:textColor">@color/cathay_green</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>

